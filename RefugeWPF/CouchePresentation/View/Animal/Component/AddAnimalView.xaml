<UserControl x:Class="RefugeWPF.CouchePresentation.View.Animal.Component.AddAnimalViewModel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RefugeWPF.CouchePresentation.View.Animal.Component"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border>
            <StackPanel Grid.Column="0">
                <StackPanel>
                    <!-- Formulaire animal - nom -->
                    <StackPanel
        Orientation="Vertical"
        Margin="0,0,0,10"
        HorizontalAlignment="Left"
    >
                        <TextBlock 
            Text="Nom"
            Margin="0,0,10,5"
            VerticalAlignment="Center"
            FontSize="14"
            FontFamily="Segoe UI"
            FontWeight="SemiBold"
        />
                        <TextBox 
            Name="AnimalName"
            Width="250"
        />
                    </StackPanel>
                    <!-- Formulaire animal - sexe -->
                    <StackPanel
        Orientation="Vertical"
        Margin="0,0,0,10"
        HorizontalAlignment="Left"
    >
                        <TextBlock 
            Text="Sexe"
            Margin="0,0,10,5"
            VerticalAlignment="Center"
            FontSize="14"
            FontFamily="Segoe UI"
            FontWeight="SemiBold"
        />
                        <StackPanel
            Name="AnimalGender"
            Width="200"
            Orientation="Horizontal"
        >
                            <RadioButton GroupName="AnimalGender" Content="Male" Margin="0,0,10,0"/>
                            <RadioButton GroupName="AnimalGender" Content="Femelle" />

                        </StackPanel>
                    </StackPanel>
                    <!-- Formulaire animal - date de naissance -->
                    <StackPanel
        Orientation="Vertical"
        Margin="0,0,0,10"
        HorizontalAlignment="Left"
    >
                        <TextBlock 
            Text="Date de naissance"
            Margin="0,0,10,5"
            VerticalAlignment="Center"
            FontSize="14"
            FontFamily="Segoe UI"
            FontWeight="SemiBold"
        />
                        <DatePicker
            Name="AnimalBirthDate"
            Width="250"
        />
                    </StackPanel>
                    <!-- Formulaire animal - date de décès -->
                    <StackPanel
        Orientation="Vertical"
        Margin="0,0,0,10"
        HorizontalAlignment="Left"
    >
                        <TextBlock 
            Text="Date de décès"
            Margin="0,0,10,5"
            VerticalAlignment="Center"
            FontSize="14"
            FontFamily="Segoe UI"
            FontWeight="SemiBold"
        />
                        <DatePicker 
            Name="AnimalDeathDate"
            Width="250"
        />
                    </StackPanel>
                    <!-- Formulaire animal - Est stérilisé -->
                    <StackPanel
        Orientation="Horizontal"
        Margin="0,0,0,10"
    >
                        <TextBlock 
            Text="Est stérilisé"
            Margin="0,0,10,0"
            VerticalAlignment="Center"
            FontSize="14"
            FontFamily="Segoe UI"
            FontWeight="SemiBold"
        />
                        <CheckBox 
            Name="AnimalIsSterilized"
            Content="Est stérilisé"
        />
                    </StackPanel>
                    <!-- Formulaire animal - date de stérilisation -->
                    <StackPanel
        Orientation="Vertical"
        Margin="0,0,0,10"
        HorizontalAlignment="Left"
    >
                        <TextBlock 
            Text="Date de stérilisation"
            Margin="0,0,10,5"
            VerticalAlignment="Center"
            FontSize="14"
            FontFamily="Segoe UI"
            FontWeight="SemiBold"
        />
                        <DatePicker 
            Name="AnimalDateSterilization"
            Width="250"
        />
                    </StackPanel>
                    <!-- Formulaire animal - particularité -->
                    <StackPanel
        Orientation="Vertical"
        Margin="0,0,0,10"
        HorizontalAlignment="Left"
    >
                        <TextBlock 
            Text="Particularité"
            Margin="0,0,10,5"
            VerticalAlignment="Center"
            FontSize="14"
            FontFamily="Segoe UI"
            FontWeight="SemiBold"
        />
                        <TextBox 
            Name="AnimalParticularity"
            Width="250"
            Height="60"
            AcceptsReturn="True"
        />
                    </StackPanel>
                    <!-- Formulaire animal - description -->
                    <StackPanel
        Orientation="Vertical"
        Margin="0,0,0,10"
        HorizontalAlignment="Left"
    >
                        <TextBlock 
            Text="Description"
            Margin="0,0,10,5"
            VerticalAlignment="Center"
            FontSize="14"
            FontFamily="Segoe UI"
            FontWeight="SemiBold"
        />
                        <TextBox 
            Name="AnimalDescription"
            Width="250"
            Height="60"
            AcceptsReturn="True"
        />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <Border>
            <StackPanel Grid.Column="1">

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
